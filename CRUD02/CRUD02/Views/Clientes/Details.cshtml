@model CrudCadastroCliente.Models.Cliente

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes - Cliente</h2>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Consultor.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Consultor.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Telefones)
        </dt>
        <dd>
            @foreach(var telefone in Model.Telefones)
            {
                <p>(@telefone.DDD) @telefone.Numero - <b>@telefone.Tipo</b></p>
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Voltar", "Index")
</p>
